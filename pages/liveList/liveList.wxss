.boxs{
    margin-bottom: 100rpx;
    overflow: hidden;
}
.header{
  width: 100%;
  background: #c2c2c2;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.container .item{
    width: 100%;
    height: 70rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    padding: 10rpx;
    position: relative;
    background: #fff;
}
.item .logo image{
    width:50rpx;
    height: 50rpx;
    vertical-align: middle;
    position: relative;
    left: 10rpx;
}
.logo.del image{
  width:50rpx;
  height:50rpx;
}
.set image{
    width:50rpx;
    height: 50rpx;
    vertical-align: right;
}
.item.bgColor{
    background: #f2e3ac;
}
.item .logo{
  width: 80rpx;
}
.item .content{
    width: 100%;
    box-sizing: border-box;
    flex: 1;
}
.item .content .text{
   width: 90%;
}
.item .set{
   width:80rpx;
}
.item .text .title{
  font-size: 32rpx;
}
.item .text .remarks{
  font-size: 22rpx;
  display: block;
}
.text .remarks,.text .title{
  color: #626262;
  width:100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
  padding-left: 20rpx;
}
.item:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    bottom:0;
    left:80rpx;
    border:1px solid #F7F7F7;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.footer{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #3478f5;
  color: #fff;
  padding: 8rpx 0;
  text-align: center;
}
.footer view{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  cursor: pointer;
  font-size: 28rpx;
}
.checked{
  width:100%;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 30rpx;
  color: #3670eb;
  padding:0 20rpx;
  margin: 10rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.sets{
    display: inline-block;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.sets image{
  width: 50rpx;
  height: 50rpx;
}