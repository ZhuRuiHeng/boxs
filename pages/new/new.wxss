.content{
  width: 100%;
}
.content .title{
  width: 100%;
  display: flex;
  font-size: 32rpx;
  position: relative;
  padding: 10rpx 0;
  background: #fff;
}
.content .title:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    top:0;
    left:0rpx;
    border:1px solid #F7F7F7;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.content .title image{
    width: 70rpx;
    height: 70rpx;
    margin: 0 20rpx;
}
.content .title input{
    flex:1;
    position: relative;
    top: 18rpx;
}
button{
  background: #3670eb;
  color: #fff;
  width: 90%;
  margin: 90rpx auto 0;
  font-size: 32rpx;
}