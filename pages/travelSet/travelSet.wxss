.content{
  width: 100%;
  overflow: hidden;
}
.header{
  display: flex;
  justify-content: space-between;
  padding:0 20rpx;
  background: #fff;
}
.header .del image{
    width: 50rpx;
    height: 50rpx;
    position: relative;
    top: 6rpx;
}
.header .save image{
    width: 60rpx;
    height: 60rpx;
}
.content .title,.name{
  width: 100%;
  display: flex;
  font-size: 32rpx;
  position: relative;
  padding: 20rpx;
  background: #fff;
}
.name{
  background: none;
  color:#796832;
}
.content .title:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    top:0;
    left:0rpx;
    border:1px solid #F7F7F7;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.content .title image{
    width: 70rpx;
    height: 70rpx;
    margin: 0 20rpx;
}
.content .title input{
    flex:1;
    color: #000;
    position: relative;
    top: 18rpx;
}
