.container{
    margin-bottom: 100rpx;
    overflow: hidden;
}
.container .item{
    width: 100%;
    height: 70rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    padding: 20rpx;
    position: relative;
    background: #fff;
}
.item .logo image{
    width:60rpx;
    height: 60rpx;
    vertical-align: middle;
    position: relative;
    left: 10rpx;
}
.logo.del image{
  width:50rpx;
  height:50rpx;
}
.set image{
    width:50rpx;
    height: 50rpx;
    vertical-align: right;
}
.item .logo{
  width: 80rpx;
}
.item .content{
    width: 100%;
    box-sizing: border-box;
    flex: 1;
}
.item .content .text{
   width: 90%;
}
.item .set{
   width:80rpx;
}
.item .text .title{
  font-size: 32rpx;
}
.item .text .remarks{
  font-size: 22rpx;
  display: block;
}
.text .remarks,.text .title{
  color: #626262;
  width:500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
}
.item:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    bottom:0;
    left:80rpx;
    border:1px solid #F7F7F7;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.footer{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #cccccc;
  padding: 16rpx 0 0 0;
  text-align: center;
}
.footer image{
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  cursor: pointer;
}
.chen{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: rgba(93,93,93,0.6);
  z-index: 5;
}
.index{
  width: 90%;
  margin: 0 auto;
  position:absolute;
  top:50%;
  left:50%;
  height:200px;
  transform:translate(-50%,-50%);
  transform-origin:50% 50%;
  z-index: 6;
}
.index .title{
    color: #fcbf56;
    text-align: center;
}
.index .theme input{
  background: #fff;
  color: #000;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 16rpx;
  padding-left: 20rpx;
  font-size: 32rpx;
  margin: 30rpx 0;
 }
.button{
  display: flex;
  justify-content: space-between;
  color: #3670eb;
  font-size: 32rpx;
}
.button view{
  padding: 20rpx;
  cursor: pointer;
}