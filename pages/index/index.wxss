/*广告  */
.dialog{
  width: 750rpx;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: #eee;
  z-index: 9999;
  transition: all 3s;
}

.dialog image{
  width: 100%;
  height: 100%;
}
.header{
  width:100%;
  text-align: right;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 30rpx;
  color: #3670eb;
  padding: 10rpx 0;
}
.sets{
    display: inline-block;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.container{
    margin-bottom: 200rpx;  
    width: 100%;
    overflow: hidden;
}
.container .item{
    width: 100%;
    height: 70rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    padding: 20rpx;
    position: relative;
    background: #fff;
}
.item .logo image{
    width:60rpx;
    height: 60rpx;
    vertical-align: middle;
    position: relative;
    left: 10rpx;
}
.logo.del image{
  width:50rpx;
  height:50rpx;
}
.set image{
    width:50rpx;
    height: 50rpx;
    vertical-align: right;
}
.item .logo{
  width: 80rpx;
}
.item .content{
    width: 100%;
    box-sizing: border-box;
    flex: 1;
}
.item .content .text{
   width: 90%;
}
.item .set{
   width:100rpx;
}
.item .text .title{
  font-size: 32rpx;
}
.item .text .remarks{
  font-size: 22rpx;
  display: block;
}
.text .remarks,.text .title{
  color: #626262;
  width:500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
}
.item:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    bottom:0;
    left:80rpx;
    border:1px solid #F7F7F7;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.footer{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #cccccc;
  padding: 16rpx 0 0 0;
  text-align: center;
}
.footer image{
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  cursor: pointer;
}